<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/icon_mission"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@android:drawable/ic_menu_compass"
            android:contentDescription="@string/missions_title"
            android:layout_marginEnd="16dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mission Title"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/primary_green_dark"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/text_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mission description"
                android:textSize="14sp"
                android:textColor="@color/gray_dark"
                android:layout_marginBottom="8dp" />

            <ProgressBar
                android:id="@+id/progress_steps"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="3"
                android:progress="0"
                android:progressTint="@color/primary_green"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_complete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mission_complete"
                android:textSize="12sp"
                style="@style/Widget.MaterialComponents.Button" />

        </LinearLayout>

        <ImageView
            android:id="@+id/icon_badge"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@android:drawable/star_big_on"
            android:contentDescription="Badge"
            android:visibility="gone"
            android:layout_marginStart="8dp" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

