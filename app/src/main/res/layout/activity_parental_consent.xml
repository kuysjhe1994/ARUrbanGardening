                        android:layout_height="wrap_content"
                        android:text="Ginagamit ang AR para mag-overlay ng information sa real world. Safe at fun para sa bata!"
                        android:textSize="14sp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_read_tips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Read Safe Use Tips"
                android:layout_marginBottom="16dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_agree"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="I Agree âœ…"
                android:textSize="18sp"
                android:layout_marginBottom="8dp"
                style="@style/Widget.MaterialComponents.Button" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_disagree"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="I Disagree"
                android:textSize="16sp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

