<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.plant.ARPlantRecognitionActivity">

    <!-- AR Surface View for ARCore camera -->
    <android.opengl.GLSurfaceView
        android:id="@+id/ar_surface_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Top overlay for instructions and status -->
    <LinearLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/ar_overlay_background"
        android:padding="16dp"
        android:elevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_arrow_back"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/back" />

            <TextView
                android:id="@+id/text_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/ar_plant_recognition_title"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center" />

            <ImageButton
                android:id="@+id/btn_voice_toggle"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_volume_on"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/toggle_voice" />

        </androidx.appcompat.widget.Toolbar>

        <!-- Detecting state -->
        <LinearLayout
            android:id="@+id/layout_detecting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp"
            android:visibility="visible">

            <ProgressBar
                android:id="@+id/progress_detecting"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/text_detecting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detecting_plant"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Try again state -->
        <LinearLayout
            android:id="@+id/layout_try_again"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/image_try_again"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_try_again"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/text_try_again"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/try_again_message"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center" />

            <Button
                android:id="@+id/btn_retry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/retry"
                android:layout_marginTop="16dp"
                android:minWidth="120dp"
                android:minHeight="48dp"
                android:textSize="16sp" />

        </LinearLayout>

        <!-- Result state -->
        <LinearLayout
            android:id="@+id/layout_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/text_plant_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/plant_name_color"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center" />

            <TextView
                android:id="@+id/text_plant_name_tagalog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:layout_marginTop="4dp"
                android:gravity="center" />

            <TextView
                android:id="@+id/text_confidence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/confidence_color"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:gravity="center" />

            <!-- Plant facts -->
            <LinearLayout
                android:id="@+id/layout_facts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                android:padding="12dp"
                android:background="@drawable/bg_facts">

                <TextView
                    android:id="@+id/text_fact1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:visibility="gone"
                    android:padding="4dp" />

                <TextView
                    android:id="@+id/text_fact2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:visibility="gone"
                    android:padding="4dp" />

                <TextView
                    android:id="@+id/text_fact3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:visibility="gone"
                    android:padding="4dp" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_show_care_guide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/show_care_guide"
                android:layout_marginTop="16dp"
                android:minWidth="200dp"
                android:minHeight="56dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

