<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_light"
    tools:context=".ui.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@color/primary_green_dark"
                android:gravity="center"
                android:layout_marginBottom="32dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_identify_plant"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="@string/menu_identify_plant"
                android:textSize="18sp"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                app:icon="@android:drawable/ic_menu_camera"
                app:iconGravity="start"
                app:iconPadding="16dp"
                style="@style/Widget.MaterialComponents.Button" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_place_garden"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="@string/menu_place_garden"
                android:textSize="18sp"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                app:icon="@android:drawable/ic_menu_compass"
                app:iconGravity="start"
                app:iconPadding="16dp"
                style="@style/Widget.MaterialComponents.Button" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_measure"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="@string/menu_measure"
                android:textSize="18sp"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                app:icon="@android:drawable/ic_menu_manage"
                app:iconGravity="start"
                app:iconPadding="16dp"
                style="@style/Widget.MaterialComponents.Button" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_track_growth"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="@string/menu_track_growth"
                android:textSize="18sp"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                app:icon="@android:drawable/ic_menu_gallery"
                app:iconGravity="start"
                app:iconPadding="16dp"
                style="@style/Widget.MaterialComponents.Button" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_settings"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="@string/menu_settings"
                android:textSize="18sp"
                android:padding="16dp"
                app:icon="@android:drawable/ic_menu_preferences"
                app:iconGravity="start"
                app:iconPadding="16dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

